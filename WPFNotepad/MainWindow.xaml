<Window x:Class="WPFNotepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFNotepad"
        mc:Ignorable="d"
        Title="Notepad" Height="720" Width="1024" WindowStartupLocation="CenterScreen" ShowInTaskbar="True">
    <!--Base Gird-->
    <Grid>
        <Grid.RowDefinitions>
            <!--Header-->
            <RowDefinition Height="35"/>
            <!--Body-->
            <RowDefinition/>
            <!--Footer-->
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
         
        <!--Header-->
        <Rectangle Fill="#FF202020"/>
        
        <!--Menu-->
        <Menu Background="Transparent" Foreground="White" VerticalAlignment="Center">
            <MenuItem Header="File">
                <MenuItem x:Name = "Open_File" Header="Open" InputGestureText="CTRL+O" Click="Open_File_Click"/>
                <MenuItem x:Name = "Save_File" Header="Save" InputGestureText="CTRL+Z" Click="Save_File_Click"/>
                <MenuItem x:Name = "Exit_Program"  Header="Exit" InputGestureText="CTRL+W" Click="Exit_Program_Click"/>
            </MenuItem>
            <MenuItem Header="Settings"></MenuItem>
        </Menu>
        
        <!--Body-->
        <Rectangle Fill="#FF2B2B2B" Grid.Row="1"/>
        <TextBox x:Name="TextArea" Grid.Row="1" Background="Transparent" Padding="10" BorderThickness="0" FontSize="16" Foreground="White" CaretBrush="White" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap"/>

        <!--Footer-->
        <Rectangle Fill="#FF202020" Grid.Row="2"/>
        <TextBlock Margin="10" Grid.Row="2" Foreground="White" VerticalAlignment="Center">WPFNotepad © 2024</TextBlock>
    </Grid>
</Window>
